<div class="form-container small-10 small-centered medium-8 large-6 columns">

<h2>Register</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
    <div class="mb1"><%= f.text_field :name, required: true, autofocus: true, placeholder: "Name", class: "radius" %></div>
  <div class="mb1"><%= f.email_field :email, required: true, autofocus: true, placeholder: "Email", class: "radius" %></div>
    <div class="mb1"><%= f.password_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),autocomplete: "off", placeholder:"Password", class: "radius" %></div>
    <div class="mb1"><%= f.password_field :password_confirmation, required: true , autocomplete: "off", placeholder: "Confirm password", class: "radius" %>
  </div>

  <div><%= f.submit "Let's Go", class: "button" %></div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>



</div>
