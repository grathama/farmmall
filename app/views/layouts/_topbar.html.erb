<div class="top-bar" id="top-bar">
  <div class="top-bar-left">
    <ul class="dropdown menu" data-dropdown-menu>
      <li class="menu-text">Farm Mall</li>
    </ul>
  </div>
  <div class="top-bar-right" >
     <ul class=" menu vertical medium-horizontal expanded" data-responsive-menu="drilldown medium-dropdown">
        <% if signed_in?  %>
          <li class="has-submenu">
            <%= link_to 'Dashboard', root_path %>
            <ul class="submenu menu vertical" data-submenu >
		      <li><%= link_to 'Log Out', destroy_user_session_path, :method => 'delete' %></li>
		      <li><%= link_to 'Edit Profile', edit_user_registration_path %></li>
		      <li><%= link_to 'Sell Product', new_product_path %><li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to 'Log In',new_user_session_path %></li>
          <li><%= link_to 'Sign up', new_user_registration_path %><li>
        <% end %>
     </ul>
  <div class="top-bar-left" data-responsive-toggle="main menu" data-hide-for="medium">
    <button class="menu-icon" type="button" data-toggle></button>
    <div class="title-bar-title">Menu</div>
  </div>
</div>

