
<div class = "row">
    <div class= "small-12 columns">
    <div class= "row">
      <div class= "small-3 medium-4 large-4 columns">
        <p><strong>Name:</strong></p>
      </div>
      <div class="small-9 medium-8 large-8 columns left-text">
        <%= @product.name %>
      </div>
    </div>
    <div class= "row">
      <div class= "small-3 medium-4 large-4 columns">
        <p><strong>Description:</strong></p>
      </div>
       <div class="small-9 medium-8 large-8 columns left-text">
        <%= @product.description %>
      </div>
    </div>
    <div class= "row">
      <div class= "small-3 medium-4 large-4 columns">
        <p><strong>Town:</strong></p>
      </div>
       <div class="small-9 medium-8 large-8 columns left-text">
        <%= @product.town %>
      </div>
    </div>
    <div class= "row">
      <div class= "small-3 medium-4 large-4 columns">
        <p><strong>Price:</strong></p>
      </div>
 <div class="small-9 medium-8 large-8 columns left-text">
        <%= @product.price %>
      </div>
    </div>
   <div class= "row">
      <div class= "small-3 medium-4 large-4 columns">
        <p><p><strong>Phone Number:</strong></p>
      </div>
 <div class="small-9 medium-8 large-8 columns left-text">
        <%= @product.phone_number %>
      </div>
    </div>
  <div class="row">
  <div class="small-6 centered columns">
<%if current_user.id==@product.user_id %>
<%= link_to 'Edit', edit_product_path(@product), class: "button" %> <%= link_to 'Done', products_path, class: "button" %><br/>
<p><%= link_to 'Remove', @product, method: :delete, data:{confirm:'Are you sure'}%></p>
<% end %>
</div>
</div>

</div>
</div>
