

<h4 class="column" >Featured Products</h4> 
<div class="column">
<ul class="products-grid no-bullet row">
<% if @products.present? %>
  <% @products.each do |product| %>
    <li class="small-12 medium-4 large-3 column">
        <div class="product-card padly">
         <%= link_to product,  class: "productview" do%>
         <%= image_tag product.image.url(:medium)%>
       <% end  %>
      <div class="row">
       <div class"small-12 text-center columns">
     <div class="product-info ell glassy-bg padmy padlx">
       <div class="title">
         <h6><%= product.name %><span>(<%= product.town%>)</span></h6><br/>
       </div>
           </div>
 
         <div class="row">
           <div class="small-6 text-left columns">
         <p class="left price label product-label radius"%>KSh <%= product.price %></p>
            </div>
          <div class="small-6 text-right columns">
         <% if signed_in? %>
         <% if current_user.id!=product.user_id %>
         <p class= "text-right" ><%= link_to 'Buy', product%></p>
         <% end %>
         <% end %>
              </div>
             </div>
           </div>
       </div>
      </li>
     <% end %>
   </ul>
</div>
   <% else %>
        <h5>Start Selling;-)</h5>
       
    <% end %>

<br>


